{
  "compilerOptions": {
    "target": "es2020",                                 
    "module": "commonjs",                            
    "outDir": "dist",                              
    "esModuleInterop": true,                         
    "forceConsistentCasingInFileNames": true,        
    "strict": true,                                  
    "skipLibCheck": true                             
  },
  "include": ["app.ts"],
  "exclude": [
    "node_modules", // Exclude the 'node_modules' directory
    "dist" // Exclude the 'dist' directory to avoid compiling the compiled files
  ]
}
